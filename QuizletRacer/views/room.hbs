<!doctype HTML>
<html>
<head>

    <title>Room</title>

    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/js/socket.io.js" type="text/javascript"></script>

    <script src="/js/connections.js" type="text/javascript"></script>

    <script src="/js/chat.js" type="text/javascript"></script>
    <script src="/js/user.js" type="text/javascript"></script>
    <script src="/js/game.js" type="text/javascript"></script>


</head>
<body>

    <h1>Room</h1>

    <input type="hidden" value="{{{name}}}" id="username" />
    <input type="hidden" value="{{{code}}}" id="code" />

    <h2>Chat</h2>
    <ul id="chat">



    </ul>

    <input id="message-input" type="text" placeholder="message"/>
    <input type="button" id="send-button" value="send"/>

    <br />

    <div id="intermission-container">

        <label for="ready">Ready: </label>
        <input type="checkbox" id="ready" name="ready" />

        <h2 id="countdown"></h2>

        <table id="users">

            <tr>
                <th>Name</th>
                <th>Ready</th>
            </tr>

        </table>

    </div>

    <div id="game-container">
        
        <h2 id="term"></h2>

        <div id="answer-container">

            <label for="answer-input">Answer: </label>
            <input type="text" name="answer-input" id="answer-input"/>
            <button id="answer-btn">Submit</button>
        
        </div>

        <table id="leaderboard">

            <tr>
                <th>Name</th>
                <th>Correct</th>
            </tr>

        </table>


    </div>

</body>
</html>