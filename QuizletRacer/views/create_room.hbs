<!doctype HTML>
<html>
<head>

    <title>Create Room</title>

    <script src="/js/jquery.min.js" type="text/javascript"></script>

    <script src="/js/create_room.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>

    <center><h1 style="font-size: 72px;">Create Room</h1></center>

    <div class="container">

        <form action="/room/create" method="post">


            <div class="row">

                <div class="col-12" style="margin-top: 20px">
                    <center><h1>1. Load Quizlet</h1></center>
                    <hr />
                </div>

                <div class="input-group mb-3 col-12">
                    <img class="img-fluid" src="/images/1.png" alt="img-1" style="margin-bottom: 20px;" />


                    <input type="text" class="form-control" placeholder="Quizlet Link" id="quizlet-link">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="load-quizlet">Load</button>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-12" style="margin-top: 20px">
                    <center><h1>2. Configuration</h1></center>
                    <hr />
                </div>

                <div class="col-12">

                    <button type="button" class="btn btn-outline-secondary col-12" id="alternative-btn">Alternatives OFF</button>

                    <button type="button" class="btn btn-outline-secondary col-12" id="answer-btn" style="margin-top: 20px;">Answer with Definitions</button>

                </div>

            </div>

            <div class="row">
                <div class="col-12" style="margin-top: 20px">
                    <center><h1>3. Create</h1></center>
                    <hr />
                </div>

                <div class="col-12">
                    <input type="button" value="Create" id="create-btn" class="btn btn-outline-secondary col-12"/>
                </div>
            </div>


        </form>
    
    </div>
</body>
</html>