<!doctype HTML>
<html>
<head>

    <title>Create Room</title>

    <script src="/js/jquery.min.js" type="text/javascript"></script>

    <script src="/js/create_room.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>

    <center><h1 style="font-size: 72px;">Create Room</h1></center>

    <div class="container">

        <form action="/room/create" method="post">

            <div class="row">

                <div class="input-group mb-3 col-12">
                    <input type="text" class="form-control" placeholder="Quizlet Link" id="quizlet-link">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="load-quizlet">Load</button>
                    </div>
                </div>
            </div>

            <div class="row">

                <button type="button" class="btn btn-outline-secondary col-6 offset-3" id="alternative-btn">Alternatives OFF</button>

            </div>

            <div class="row">
                <input type="button" value="Create" id="create-btn" class="btn btn-outline-secondary col-6 offset-3" style="margin-top: 20px;"/>
            </div>
        </form>
    
    </div>
</body>
</html>